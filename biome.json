{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"indentStyle": "tab",
			"trailingComma": "es5",
			"arrowParentheses": "asNeeded",
			"lineEnding": "lf",
			"quoteStyle": "single",
			"indentWidth": 2,
			"lineWidth": 80
		}
	}
}
